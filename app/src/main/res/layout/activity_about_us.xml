<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Header -->
    <TextView
        android:id="@+id/aboutUsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Developer Details -->
    <TextView
        android:id="@+id/developerDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We are a team of passionate developers dedicated to creating user-friendly and innovative applications. Our interests include mobile development, UX design, and problem-solving."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:paddingBottom="16dp" />

    <!-- Team Members -->
    <TextView
        android:id="@+id/teamMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Members:\n- Developer 1: Turki Alufarrej, Product manegar - Team Leader \n- Developer 2: Eyad Omar, UX/UI designer \n- Developer 3: Anas Mohammed, Programmer - DBA"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp" />
</LinearLayout>
